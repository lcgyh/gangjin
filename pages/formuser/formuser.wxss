/* pages/formuser/formuser.wxss */

.container_form{
  width: 100%;
  height: 100vh;
  position: relative;
}
.container_form .con_bg{
  width: 100%;
  height: 100vh;
  position: absolute;
  left: 0;
  top:0
}
.container_form .con_bg image{
  width: 100%;
  height: 100%;
}
.container_form .form_con{
  position: relative;
  z-index: 90;
  width: 100%;
 overflow: hidden;
}
.container_form .form_con .title{
  color: #8F8E94;
  font-size: 28rpx;
  text-align: center;
  margin-top: 60rpx;
  margin-bottom: 40rpx;
}
.container_form .form_con .form_item{
  padding: 0 40rpx;
  margin-bottom: 28rpx;

}
.container_form .form_con .form_item .label{
  color: #000;
  font-size: 28rpx;

}
.container_form .form_con .form_item .van-cell{
  margin-top: 20rpx;
  border:1px solid #8F8E94;
  border-radius: 14rpx;
}

.container_form .form_con .btn_con{
  padding: 0 40rpx;
  margin-top: 70rpx;
}
.container_form .form_con .btn{
  height: 96rpx;
  background: #B83000;
  border-radius: 46rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 96rpx;
}
.container_form .back_icon{
  position: absolute;
  left: 40rpx;
  top:40rpx;
}